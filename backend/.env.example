# API Settings
API_V1_STR=/api/v1  # Base path for API version 1 endpoints
PROJECT_NAME=TripHelix  # Name of the project for documentation and logging

# Database Settings
POSTGRES_SERVER=localhost  # PostgreSQL server hostname
POSTGRES_USER=postgres  # PostgreSQL username
POSTGRES_PASSWORD=postgres  # PostgreSQL password
POSTGRES_DB=triphelix  # PostgreSQL database name

# Redis Settings
REDIS_HOST=localhost  # Redis server hostname
REDIS_PORT=6379  # Redis server port

# AI Settings
OPENAI_API_KEY=your_openai_api_key  # API key for OpenAI services
OPENAI_MODEL=gpt-4o-mini  # OpenAI model to use (e.g., gpt-4, gpt-3.5-turbo)
OPENAI_TEMPERATURE=0.7  # Temperature for model responses (0.0 to 1.0)
OPENAI_MAX_TOKENS=2000  # Maximum tokens in response
LANGCHAIN_API_KEY=your_langchain_api_key  # API key for LangChain services

# Security
SECRET_KEY=your_secret_key  # Secret key for JWT token generation
ACCESS_TOKEN_EXPIRE_MINUTES=30  # JWT token expiration time in minutes 